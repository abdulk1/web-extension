{
  "name": "Web ODBC",
  "version": "1.0",
  "description": "A Web browser extension that enables the development of database-driven HTML5 (Javascript) applications, without binding to specific back-end database engines for data storage and access.",
  "permissions": ["storage"],
  // "background": {
  //   "service_worker": "service_worker.js",
  //   "type": "module"
  // },
  // "action": {
  //   "default_popup": "index.html"
  // },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "cross_origin_embedder_policy": {
    "value": "credentialless"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  },
  "host_permissions": ["*://*/*"],
  "web_accessible_resources": [
    { "resources": ["*.js", "*.html"], "matches": ["*://*/*"] }
  ],
  "manifest_version": 3
}
